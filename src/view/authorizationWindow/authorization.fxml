<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AuthorizationFXMLController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane focusTraversable="true" prefHeight="378.0" prefWidth="474.0">
         <children>
            <ImageView fitHeight="378.0" fitWidth="474.0" focusTraversable="true" opacity="0.84">
               <image>
                  <Image url="@141881_00_2x.jpg" />
               </image>
            </ImageView>
            <TextField fx:id="loginField" layoutX="142.0" layoutY="99.0" prefHeight="27.0" prefWidth="190.0" promptText="Имя пользователя" />
            <PasswordField id="password-field" fx:id="passwordField" layoutX="142.0" layoutY="146.0" prefHeight="27.0" prefWidth="190.0" promptText="Пароль">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </PasswordField>
            <Button fx:id="loginButton" layoutX="105.0" layoutY="222.0" mnemonicParsing="false" onAction="#loginButtonPushed" text="Войти">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="registrationButton" layoutX="228.0" layoutY="222.0" mnemonicParsing="false" onAction="#registrationButtonPushed" text="Зарегистрироваться">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
   </children>
</GridPane>
